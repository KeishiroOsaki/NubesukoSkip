<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="00dp"
    android:paddingBottom="0dp"
    tools:context="com.example.oosakikeishiro.nubesukoskip.GameActivity"
    android:padding="0dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reload"
        android:id="@+id/bt_reload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/score_l"
        android:layout_toStartOf="@+id/score_l"
        android:enabled="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:id="@+id/bt_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/score_l"
        android:layout_toEndOf="@+id/score_l" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/score"
        android:id="@+id/score_l"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/bt_reload" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_reload"
        android:id="@+id/viewfw">

        <!--
                <SurfaceView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/View01"
                    android:background="#ffffffff"
                    android:layout_above="@+id/button"
                    android:focusable="true" />-->

    </FrameLayout>

</RelativeLayout>
